<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />


    <com.githang.stepview.StepView
        android:id="@+id/step_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:svCircleColor="@color/bg_color"
        app:svFillRadius="10dp"
        app:svLineWidth="5dp"
        app:svSelectedColor="@color/orange_90"
        app:svStrokeWidth="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tye_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="类型一"
            android:textColor="@color/blue_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_type_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="类型二"
            android:textColor="@color/blue_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_type_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="类型三"
            android:textColor="@color/blue_color"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>
