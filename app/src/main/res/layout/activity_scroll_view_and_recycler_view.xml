<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_scroll_view_and_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />


    <com.cnsunrun.androidstudy.view.PasswordEditText
        android:id="@+id/password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="15dp"
        android:background="@null"
        android:inputType="numberPassword"
        app:bgCorner="3dp"
        app:passwordNumber="6" />


    <com.cnsunrun.androidstudy.view.PayPsdInputView
        android:id="@+id/pay_psd_input_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:inputType="numberPassword"
        app:bottomLineColor="@color/text_color_666"
        app:circleColor="@color/text_color_666"
        app:maxCount="6"
        app:psdType="bottomLine"
        app:radius="3dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_type_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="方式一" />

        <TextView
            android:id="@+id/tv_type_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="方式二" />

        <TextView
            android:id="@+id/tv_type_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="方式三" />
    </LinearLayout>
</LinearLayout>
