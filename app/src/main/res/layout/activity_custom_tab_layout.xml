<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_tab_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        app:tl_indicator_width_equal_title="true"
        tl:tl_divider_color="#1A000000"
        tl:tl_divider_padding="0dp"
        tl:tl_divider_width="1dp"
        tl:tl_indicator_color="@color/blue_color"
        tl:tl_indicator_height="1.5dp"
        tl:tl_tab_padding="10dp"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="@color/blue_color"
        tl:tl_textUnselectColor="@color/hint_text_color"
        tl:tl_underline_color="#1A000000"
        tl:tl_underline_height="1dp" />


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none" />


</LinearLayout>
