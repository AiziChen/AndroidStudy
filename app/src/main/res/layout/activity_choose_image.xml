<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar"></include>

    <ru.noties.scrollable.ScrollableLayout
        android:id="@+id/scrollableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        app:scrollable_autoMaxScroll="true"
        app:scrollable_defaultCloseUp="false">

        <include layout="@layout/header_home_content"></include>

        <include layout="@layout/include_tablayout_viewpager"></include>

    </ru.noties.scrollable.ScrollableLayout>


</LinearLayout>