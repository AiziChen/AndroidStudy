<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_suspension"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_titllebar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">


        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:indicator_drawable_selected="@drawable/sel_banner_show"
            app:indicator_drawable_unselected="@drawable/sel_banner_hide" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_et_search"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:text="取快递"
            android:textColor="@color/black_40"
            android:textSize="13sp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <com.cnsunrun.androidstudy.widgtet.YellowRatingBar
            android:id="@+id/ratingBar"
            style="@style/RatingBarSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvStar"
            style="@style/TextViewCaption"
            android:text="5分" />
    </LinearLayout>


    <include layout="@layout/include_banner_header" />


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageView1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_image01"
        app:riv_border_color="#ee0000"
        app:riv_border_width="1dip"
        app:riv_corner_radius="5dip"
        app:riv_mutate_background="true"
        app:riv_oval="false"
        app:riv_tile_mode="clamp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageView2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:background="@drawable/ic_image02"
        android:scaleType="fitCenter"
        app:riv_border_color="#333333"
        app:riv_border_width="1dip"
        app:riv_corner_radius="5dip"
        app:riv_mutate_background="true"
        app:riv_oval="true"
        app:riv_tile_mode="clamp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_image03"
        app:riv_border_color="#333333"
        app:riv_border_width="1dip"
        app:riv_corner_radius="5dip"
        app:riv_mutate_background="true"
        app:riv_oval="false"
        app:riv_tile_mode="clamp" />


</LinearLayout>
